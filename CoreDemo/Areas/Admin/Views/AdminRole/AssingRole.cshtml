@using CoreDemo.Models
@model List<RoleAssignViewModel>
@{
    ViewData["Title"] = "AssingRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form method="post" asp-action="AssingRole" asp-route-userId="@TempData["UserId"]">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleID" />
            <input type="hidden" asp-for="@Model[i].Name" />
            <input type="checkbox" asp-for="@Model[i].Exists" class="form-check-input"
            @(Model[i].Exists ? "checked" : "") />
            <label class="form-check-label" asp-for="@Model[i].Exists">@Model[i].Name</label>

        </div>
        <br />
    }
        <button class="btn btn-info">Değişiklikleri Kaydet</button>
    
</form>
<br />
<a href="/Admin/AdminRole/UserRoleList" class="btn btn-primary">Kullanıcı Listesine Dön</a>
