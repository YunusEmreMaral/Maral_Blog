@model List<Blog>

<div class="tech-btm">
	<h3>Son Postlar</h3>
	@foreach (var item in Model)
	{
		<div class="blog-grids row mb-3">
			<div class="col-md-5 blog-grid-left">
				<a href="/Blog/BlogReadAll/@item.BlogID">
					<img src="@item.BlogImage" class="img-fluid" alt="">
				</a>
			</div>

			<div class="col-md-7 blog-grid-right">
				<h3>@item.BlogTitle</h3>
				<h5>
					@if (item.BlogContent.Length <= 50)
					{
						<a href="/Blog/BlogReadAll/@item.BlogID">@item.BlogContent</a>
					}
					else
					{
						<a href="/Blog/BlogReadAll/@item.BlogID">@item.BlogContent.Substring(0, 50).TrimEnd()  ...</a>
					}

				</h5>
				<div class="sub-meta">
					<span>
						<i class="far fa-clock"></i>@(((DateTime)item.BlogCreateDate).ToString("d"))
					</span>
				</div>
			</div>
		</div>
	}
</div>
