@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Yeni Mesaj Oluştur</h1>
<br />
@using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
{
    <div class="form-group">
        <label for="ReceiverID">Alıcı Seçimi</label>
        @Html.DropDownListFor(x => x.ReceiverID, (List<SelectListItem>)ViewBag.v1, new { @class = "form-control" })
    </div> // alıcıyı dropdown list ile çekme 
    <br />
    @Html.Label("Mesaj Konusu")
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    <br />
    @Html.Label("Mesajınız")
    @Html.TextBoxFor(x => x.MessageDetails, new { @class = "form-control" })
    <br />
    <br />
    <button class="btn btn-info">Gönder</button>
}
