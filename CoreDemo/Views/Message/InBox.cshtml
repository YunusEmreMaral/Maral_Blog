@model List<Message2>
@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Gelen Kutusu</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Konu</th>
        <th>Gönderen</th>
        <th>Tarih</th>
        <th>Mesajı Aç</th>
        <th>Mesajı Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        
        <tr>
            <td>@item.MessageID</td>
            <td>@item.Subject</td>
            <td>@item.SenderUser.WriterName</td>
            <td>@(((DateTime)item.MessageDate).ToString("d"))</td>
            <td><a href="/Message/MessageDetails/@item.MessageID" class="btn btn-success">Aç</a></td>
            <th><a href="/Message/DeleteMessage/@item.MessageID" class="btn btn-danger">Sil</a></th>

        </tr>
    }
</table>
<br />
<a href="/Message/SendMessage/" class="btn btn-primary">Yeni Mesaj Oluştur</a>

